[Unit]
Description=MediaWiki jobrunner for {{ instance.key }}

[Service]
User={{ mediawiki_apache_user }}
ExecStart=/usr/bin/php /srv/mediawiki/{{ instance.key }}/targets/production/maintenance/runJobs.php --wait --maxjobs=1000 --memory-limit=2G --procs=2
Restart=always
RestartSec=5
PrivateDevices=true
PrivateTmp=true
# Not supported in Centos 7
#ProtectControlGroups=true
ProtectHome=true
# Not supported in Centos 7
#ProtectKernelTunables=true
ProtectSystem=full
Nice=15

[Install]
WantedBy=multi-user.target
